<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ui.CreateRoomFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/roomIDText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/maru_monica"
            android:textSize="28sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/createRoomWaitText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/createRoomWaitText"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginBottom="60dp"
            android:text="@string/createRoom_wait"
            android:fontFamily="@font/maru_monica"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/createRoomReturnButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/createRoomReturnButton"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginBottom="200dp"
            android:fontFamily="@font/maru_monica"
            android:text="@string/createRoom_return"
            android:textSize="36sp"
            android:textColor="@color/yellow"
            android:backgroundTint="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>